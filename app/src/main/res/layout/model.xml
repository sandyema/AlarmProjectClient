<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_margin="2dp"
    android:layout_marginStart="2dp"
    android:layout_marginLeft="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">

    <EditText
        android:id="@+id/alarmName"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="28sp"
        android:layout_marginTop="4dp"
        android:textStyle="bold"
        android:typeface="sans" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/initialPriceText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Initial price"
                android:textAlignment="center"
                android:textColor="@color/register_bk_color"
                android:textSize="16sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/initialPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:typeface="sans" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/currentPriceText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current price"
                android:textAlignment="center"
                android:textColor="@color/register_bk_color"
                android:textSize="16dp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/currentPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                android:typeface="sans" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/wantedPercentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wanted percent"
                android:textAlignment="center"
                android:textColor="@color/register_bk_color"
                android:textSize="16sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <EditText
                android:id="@+id/wantedPercent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:typeface="sans" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="74dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkedTextOver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Over"
                android:textColor="@color/register_bk_color"
                android:textStyle="bold"
                android:typeface="sans" />

            <CheckBox
                android:id="@+id/checkedTextLess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Less"
                android:checked="true"
                android:textColor="@color/register_bk_color"
                android:textStyle="bold"
                android:typeface="sans" />


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">

        <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
            android:id="@+id/deleteButton"
            style="@style/loginButton"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:layout_marginLeft="8dp"
            android:text="Delete"
            app:initialCornerAngle="20dp"
            app:spinning_bar_color="#FFF"
            app:spinning_bar_padding="6dp"
            app:spinning_bar_width="4dp" />

        <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
            android:id="@+id/editButton"
            style="@style/loginButton"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="@dimen/loginViewsMargin"
            android:text="Edit"
            app:initialCornerAngle="20dp"
            app:spinning_bar_color="#FFF"
            app:spinning_bar_padding="6dp"
            app:spinning_bar_width="4dp" />

    </LinearLayout>
</LinearLayout>